---
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
  </head>
  <header>
  <h1 class="text-2xl">Mon site de manchots</h1>
  <nav>
    <a class="bg-gray-600 text-white px-4 py-2 inline-block" href="/">Accueil</a> | 
    <select class="bg-gray-200 border border-gray-300 rounded px-4 py-2" id="species">
      <option value="">Choisir une esp√®ce</option>
      <option value="Adelie">Adelie</option>
      <option value="Chinstrap">Chinstrap</option>
      <option value="Gentoo">Gentoo</option>
    </select> | 
    <a class="bg-gray-600 text-white px-4 py-2 inline-block" href="/test-iframe">Test Iframe</a> | 
    <a class="bg-gray-600 text-white px-4 py-2 inline-block" href="/test-ancre">Test Ancre</a>
    <a class="bg-gray-600 text-white px-4 py-2 inline-block" href="/tab">Test Tab</a> |
  </nav>
</header>
  <body>
    <slot />
    <script>
      document.querySelector("#species")?.addEventListener("change", (evt) => {
        const value = (evt.target as HTMLSelectElement).value;
        if (value) {
          location.pathname = "/species/" + value;
        }
      });
    </script>
  </body>
</html>



<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
