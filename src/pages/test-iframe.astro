---
import Layout from "../layouts/Layout.astro";
---

<Layout>


  <h1 class="text-2xl mb-6">Navigation avec iframe</h1>

  
  <nav class="mb-6">
    <div class="flex space-x-4">
      <a href="/species/ifram/Adelie" target="species-frame" class="rounded bg-blue-500 text-white px-4 py-2 inline-block">
        Adelie
      </a>
      <a href="/species/ifram/Gentoo" target="species-frame" class="rounded bg-yellow-500 text-white px-4 py-2 inline-block">
        Gentoo
      </a>
      <a href="/species/ifram/Chinstrap" target="species-frame" class="rounded bg-purple-500 text-white px-4 py-2 inline-block">
        Chinstrap
      </a>
    </div>
  </nav>


  <iframe 
    name="species-frame"
    src="/species/ifram/Adelie"
    class="w-full border border-gray-300 rounded"
    id="species-iframe"
    style="height: 550px;"
    onload="adjustHeight()"
  ></iframe>

  <script>
    function adjustHeight() {
      const iframe = document.getElementById('species-iframe');
      const windowHeight = window.innerHeight;
      const newHeight = Math.max(windowHeight * 0.6, 550);
      iframe.style.height = newHeight + 'px';
    }
    window.addEventListener('resize', adjustHeight);
    document.addEventListener('DOMContentLoaded', adjustHeight);
  </script>

</Layout>